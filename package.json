{
   "name": "@bobanetwork/contract-example",
   "version": "1.0.0",
   "description": "Boba Network contract deployment example",
   "main": "build/src/exec/run.js",
   "files": [
      "test/**/*.ts"
   ],
   "scripts": {
      "deploy": "hardhat deploy --network boba_sepolia",
      "test": "hardhat test test/contract.spec.ts",
      "build": "yarn build:contracts && yarn build:typescript",
      "build:contracts": "hardhat compile",
      "build:typescript": "tsc -p ./tsconfig.json",
      "clean": "rimraf  dist/ ./tsconfig.tsbuildinfo",
      "lint": "yarn lint:fix && yarn lint:check",
      "lint:fix": "prettier --config .prettierrc.json --write \"{src,exec,test}/**/*.ts\"",
      "lint:check": "tslint --format stylish --project ."
   },
   "license": "MIT",
   "devDependencies": {
      "@nomiclabs/hardhat-ethers": "^2.0.2",
      "@nomiclabs/hardhat-etherscan": "^3.1.8",
      "@nomiclabs/hardhat-waffle": "^2.0.1",
      "@types/chai": "^4.3.10",
      "@types/mocha": "^8.2.3",
      "@types/node": "^16.18.62",
      "chai": "^4.3.10",
      "chai-as-promised": "^7.1.1",
      "ethereum-waffle": "^3.4.0",
      "ethers": "^5.5.4",
      "hardhat": "^2.19.1",
      "ts-node": "^10.9.1",
      "tslint": "^6.1.3",
      "typescript": "^4.5.2"
   },
   "dependencies": {
      "@ethereumjs/common": "^3.2.0",
      "@ethereumjs/tx": "4.2.0",
      "@openzeppelin/contracts": "4.3.2",
      "@openzeppelin/contracts-upgradeable": "4.3.2",
      "dotenv": "^8.6.0",
      "ethers": "^5.5.4",
      "hardhat-deploy": "^1.0.4",
      "prompt-sync": "^4.2.0"
   },
   "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
